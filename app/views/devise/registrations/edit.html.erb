
<h2><i class="fa fa-angle-right"></i>編輯個人資料 <%#= resource_name.to_s.humanize %></h2>
  <div class="row mt">
    <div class="col-lg-12">
      <div class="form-panel">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, required: true, label: '姓名'  %>
          <%= f.association :department,required: true, autofocus: true,
                prompt: "請選擇", label: '系所'%>
          <%= f.association :laboratory, autofocus: true, prompt: "請選擇", label: '實驗室'%>
          <%= f.input :email, required: true, autofocus: true, label: '信箱'%>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, autocomplete: "off", hint: "若不更改密碼請保持空白",
              required: false, label: '新密碼' %>
          <%= f.input :password_confirmation, required: false, label: '確認新密碼' %>
          <%= f.input :current_password, hint: "請輸入原先密碼已完成變更", required: true,
              label: '目前密碼' %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "更新個人資料" %>
        </div>
      <% end %>

      <!-- <h3>Cancel my account</h3>

      <p>Unhappy? <%#= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p> -->

      <%= link_to "取消編輯", :back %>
    </div>
  </div>
</div>

