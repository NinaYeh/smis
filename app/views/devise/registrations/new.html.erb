<section class="wrapper">
  <h2><i class="fa fa-angle-right"></i>註冊</h2>
  <div class="row mt">
    <div class="col-lg-12">
      <div class="form-panel">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' }, label: '信箱'  %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: 'form-control' }, label: '密碼'   %>
            <%= f.input :password_confirmation, required: true, input_html: { class: 'form-control' } , label: '再次輸入密碼'  %>
          </div>
          <br>
          <div class="form-actions">
            <%= f.button :submit, "送出", class:'btn btn-theme03' %>
          </div>
        <% end %>

        <%#= render "devise/shared/links" %>
      </div>
    </div>
   </div>
</section>

