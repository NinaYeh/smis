= simple_form_for current_object do |f|
  = f.error_notification
  .form-inputs
    = f.input :title, label: '論文題目', required: true
    = f.input :created_at ,as: :date_time_picker, label: '建立日期', input_html: {placeholder: Date.today}
    = f.input :content, label: '說明'
    = f.input :book_list , label: '書單' , as: :file
    = f.input :slide , label: '投影片' , as: :file
    = f.collection_radio_buttons :published, [[true, ' 公開分享'] ,[false, ' 不要公開']],
                                 :first, :last
    = f.input :final, label: '最後論文題目'
  .form-actions
    = f.button :submit, "送出"
